  <body>
    <div id="table" class="container">
      <table class="striped">
        <form method="post" action="/heardify/getPlaylist">
          <button type="submit" id="getPlaylistBtn">Get Playlist</button>
        </form>

        <thead>
          <tr>
            <th>Song</th>
            <th>Artist</th>
